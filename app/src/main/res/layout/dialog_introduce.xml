<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <wangdaye.com.geometricweather.ui.widget.IntroduceViewPager
        android:id="@+id/fragment_introduce_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@drawable/introduction_3" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <wangdaye.com.geometricweather.ui.widget.CircularIndicator
                android:id="@+id/fragment_introduce_indicator"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/fragment_introduce_text"
                android:layout_centerInParent="true"
                android:layout_below="@id/fragment_introduce_indicator"
                android:layout_margin="@dimen/card_info_margin"
                style="@style/content_text"
                tools:text="@string/introduce_text_3" />

            <Button
                android:id="@+id/fragment_introduce_button"
                android:text="@string/next"
                android:layout_below="@id/fragment_introduce_text"
                android:layout_alignParentRight="true"
                android:textColor="@color/lightPrimary_3"
                android:layout_margin="@dimen/card_info_margin"
                style="@style/material_button"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

</LinearLayout>